{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "CO2 Emissions By Fuel Type",
  "width": "container",
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/sthe0012/FIT3179Assignment2/main/data/CO2FuelType.csv"
  },
  "params": [
    {
      "name": "highlight",
      "select": {"type": "point", "on": "pointerover"}
    },
    {"name": "select", "select": "point"}
  ],
  "transform": [{
    "window": [{
        "op": "sum",
        "field": "Total",
        "as": "TotalTotal"
    }],
    "frame": [null, null]
  },
  {
    "calculate": "datum.Total/datum.TotalTotal",
    "as": "PercentOfTotal"
  }],
  "mark": {
    "type": "arc",
    "innerRadius": 50,
    "stroke": "white",
    "cursor": "pointer",
    "tooltip": true
  },
  "encoding": {
    "theta": {
      "field": "Total",
      "type": "quantitative",
      "stack": "normalize"
    },
    "color": {
      "field": "Emission Type", 
      "type": "nominal",
      "title": "CO2 Emissions by Type:"},
    "tooltip": [
        {"field": "Total", "type": "quantitative"},
        {"field": "Emission Type", "type": "nominal"},
        {
          "field": "PercentOfTotal",
          "type": "quantitative",
          "title": "Percentage",
          "format": ".1%"
        }
      ],
    "fillOpacity": {
      "condition": {"param": "select", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "param": "select",
          "empty": false,
          "value": 2
        },
        {
          "param": "highlight",
          "empty": true,
          "value": 1
        }
      ],
      "value": 0
    }
  },
  "config": {
    "scale": {
      "bandPaddingInner": 0.2
    }
  }
}
